#include <iostream>
using namespace std;

class employee {
    int id;
    float salary;

public:
    void input() {
        cout << "Enter Employee ID and Salary: ";
        cin >> id >> salary;
    }

    void display() {
        cout << "Employee ID: " << id << ", Salary: " << salary << endl;
    }
};

int main() {
    employee emp[3]; // Array of 3 employee objects

    for (int i = 0; i < 3; i++) {
        cout << "\nEnter Details of Employee " << i + 1 << ":" << endl;
        emp[i].input();
    }

    cout << "\nEmployee Details:\n";
    for (int i = 0; i < 3; i++) {
        emp[i].display();
    }

    return 0;
}
